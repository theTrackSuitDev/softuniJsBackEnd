<div class="details-container">
    <div class="details-container-image">
        <img
            src={{item.imageUrl}}>
    </div>
    <div class="details-container-info">
        <h2>Title: {{item.title}}</h2>
        <h3>Type: {{item.type}}</h3>
        <h3>Certificate: {{item.certificate}}</h3>
        <h3>Price: â‚¬{{item.price}}</h3>
        <h3>By: {{item.owner.email}}</h3>
        <!--If there are sign up users-->
        {{#if haveSignUps}}
        <h4>Signed By: {{signedList}}</h4>
        <!--If there are no sign up users-->
        {{else}}
        <h4>Nobody has signed in for this course yet</h4>
        {{/if}}
    </div>
    <div class="details-container-content">
        <p>{{item.description}}</p>
    </div>
    <div class="btn-container">
        {{#if validUser}}
            {{#if isOwner}}
            <a href="/edit/{{item._id}}">Edit</a>
            <a href="/delete/{{item._id}}">Delete</a>
            {{else}}
                {{#if userIsSigned}}
                <p class="sign-up">You've already signed up for this course!</p>
                {{/if}}
                {{#unless userIsSigned}}
                <a href="/signUp/{{item._id}}">Sign up</a>
                {{/unless}}
            {{/if}}
        {{/if}}
    </div>
</div>