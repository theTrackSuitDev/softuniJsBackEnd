<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Location</h2>

        <form class="search-wrapper cf" method="POST">
            <input id="#search-input" type="text" name="location" placeholder="Search here..." required
                value="{{location}}" />
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#if items}}
            <ul class="card-wrapper">
                <!-- Display a li with information about every post (if any)-->
                {{> catalogItem}}
            </ul>
            {{else}}
            <div id="no-post">
                <h2>There are no results found.</h2>
            </div>
            {{/if}}
        </div>
    </section>
</main>