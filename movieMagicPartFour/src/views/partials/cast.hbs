{{#each movie.cast}}
<div class="cast-card">
    <div class="card-img">
        <img src="{{imageUrl}}"
            alt="{{name}}">
    </div>
    <div class="cast-info">
        <h1>{{name}}</h1>
        <h3>Age: {{age}}</h3>
        <h3>Born: {{born}}</h3>
        <h3>Name in Movie: {{movieName}}</h3>
    </div>
</div>
{{else}}
<div class="no-posts">
    <p class="no-offer">There are no actors attached to this movie yet...</p>
</div>
{{/each}}